@model NoteMarketPlace.Models.usersignup
@{
    ViewBag.Title = "Signup";
}


<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>MarketPlace</title>
    <!--fonts-->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!--font awsome-->
    <link rel="stylesheet" type="text/css" href="/css/font-awsome/font-awesome.css">

    <!--bootstrap-->
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.css" />

    <!--costume style-->
    <link rel="stylesheet" type="text/css" href="/css/login/style(login).css">
    <link rel="stylesheet" type="text/css" href="/css/sign-up/style(sign-up).css">

    <!--responsive style-->
</head>
<body>
    <section id="login">
        <div class="login-page">
            <div class="w-login-page">
                <div class="com-symbol">
                    <img src="/images/login/top-logo.png" alt="">
                </div>
                <div class="page">
                    <div class="center-heading text-center">
                        <h2>Creat an account</h2>
                        <p>Enter your details to sign up</p>
                    </div>
                    @Html.AntiForgeryToken()
                    <div class="form-page">
                        <form action="@Url.Action("Signup","Account")" method="post">
                            @if (TempData["register"] != null)
                            {
                                <p class="text-center verified"><span><i class="fa fa-check-circle"></i></span> Your account has been succesfully created.</p>

                            }
                            @if (TempData["exist"] != null)
                            {
                                <p class="text-center verified"><span><i class="fa fa-check-circle"></i></span> Already Registered user.</p>
                            }
                            <div class="form-group">
                                @*<label for="exampleInputPassword1">First Name<sup>*</sup></label>*@
                                @Html.LabelFor(m => m.firstname)
                                @*<input name="firstname" type="text" id="exampleInputPassword1" class="form-control" placeholder="First Name">*@
                                @Html.TextBoxFor(m => m.firstname, new { @placeholder = "First Name", @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(m => m.firstname, "", new { @class = "text-danger" })

                            <div class="form-group">
                                @*<label for="exampleInputPassword2">Last Name<sup>*</sup></label>
            <input name="lastname" id="exampleInputPassword2" type="text" class="form-control" placeholder="Last Name">
                                *@
                                @Html.LabelFor(m => m.lastname)
                                @Html.TextBoxFor(m => m.lastname, new { @placeholder = "Last Name", @class = "form-control" })
                            </div>
                            @Html.ValidationMessageFor(m => m.lastname, "", new { @class = "text-danger" })

                            <div class="form-group">
                                @Html.LabelFor(m => m.emailAddress)
                                @Html.TextBoxFor(m => m.emailAddress, new { @placeholder = "Email address", @class = "form-control" })
                                @*<label for="exampleInputEmail1">Email address<sup>*</sup></label>
            <input name="emailAddress" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter your email address">
                                *@
                            </div>
                            @Html.ValidationMessageFor(m => m.emailAddress, "", new { @class = "text-danger" })

                            <div class="form-group pass-form">
                                <div>
                                    @Html.LabelFor(m => m.password)
                                    @Html.TextBoxFor(m => m.password, new { id = "InputPassword2", @placeholder = "enter password", @class = "form-control" })
                                    @*<label for="InputPassword2">Password</label>
                <input name="password" type="password" class="form-control" id="InputPassword2" placeholder="Enter your Password">
                                    *@
                                    <span class="eye"><i class="fa fa-eye toggelclas" toggle="#InputPassword2"></i></span>
                                </div>

                            </div>
                            @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger"})

                            <div class="form-group pass-form1">
                                <div>
                                    @Html.LabelFor(m => m.con_password)
                                    @Html.TextBoxFor(m => m.con_password, new { @id = "InputPassword1", @placeholder = "confirm password", @class = "form-control" })

                                    @*<label for="InputPassword1">confirm Password</label>
                <input name="con_password" type="password" class="form-control" id="InputPassword1" placeholder="Re-Enter your Password">
                                    *@
                                    <span class="eye"><i class="fa fa-eye toggelclas" toggle="#InputPassword1"></i></span>
                                </div>
                                @Html.ValidationMessageFor(m => m.con_password, "", new { @class = "text-danger" })
                                @if (TempData["notMatched"] != null)
                                {
                                    <p class="text-danger"><span><i class=""></i></span>Confirm Password Is not Matched with password.</p>
                                }

                            </div>

                            <button type="submit" class="login-btn btn btn-primary">SIGN UP</button>
                            <p class="bottom-text text-center">Already have an account?<span> <a style="cursor:pointer;" onclick="location.href='@Url.Action("Login")'">Login</a></span></p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--jquery-->
    <script src="~/javascript/jquery/jquery.js"></script>

    <!--bootstrap-->
    <script src="/javascript/bootstrap.js"></script>

    <!--costume script-->
    <script src="/javascript/change-password/script(change-password).js"></script>
</body>
</html>
