    @if (User.Identity.IsAuthenticated && (User.IsInRole("Super Admin") || User.IsInRole("admin") || User.IsInRole("user")))
    {
        @Html.Partial("_navabrAuthenticat");
    }
    else
    {
        @Html.Partial("_navbar")
    }
    <!--banner-->
    <section id="user-banner">
        <div class="w-user-banner">
            <div class="user-heading text-center">
                <h1>Contact Us</h1>
            </div>
        </div>

    </section>

    <section id="get-in-touch">
        <div class="container-bgs">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">

                        <div class="heading-of-basics">

                            <h2>Get In Touch</h2>
                            <p>Let Us know how to get back to you</p>
                        </div>

                    </div>

                    <!--form-->
                    <div class="col-md-12">

                        <div class="row">

                            <!--info-->
                            <div class="col-md-6 col-sm-12">
                                <form id="usr-form" method="post" action="contact_us">

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.fullName, new { @for = "first-name" })
                                        @Html.EditorFor(m => m.fullName, new { htmlAttributes = new { @id = "first-name", @placeholder = "Full Name", @class = "form-control", } })
                                        @Html.ValidationMessageFor(m => m.fullName, "", new { @class = "text-danger" })

                                        @*<label for="first-name">First Name*</label>
                                            <input type="text" class="form-control" id="first-name" placeholder="Enter your first name">*@
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.EmailAddress, new { @for = "last-name" })
                                        @Html.EditorFor(m => m.EmailAddress, new { htmlAttributes = new { @id = "last-name", @placeholder = "Email address", @class = "form-control", } })
                                        @Html.ValidationMessageFor(m => m.EmailAddress, "", new { @class = "text-danger" })

                                        @*<label for="last-name">Last Name*</label>
                                            <input type="text" class="form-control" id="last-name" placeholder="Enter your last name">*@
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Subject, new { @for = "Subject" })
                                        @Html.EditorFor(m => m.Subject, new { htmlAttributes = new { @id = "Subject", @placeholder = "Subject", @class = "form-control", } })
                                        @Html.ValidationMessageFor(m => m.Subject, "", new { @class = "text-danger" })

                                        @*<label for="Subject">Subject*</label>
                                            <input type="text" class="form-control" id="Subject" placeholder="Enter your Subject">*@
                                    </div>
                                </form>
                            </div>

                            <!--comments-->
                            <div class="col-md-6 col-sm-12">
                                @Html.LabelFor(m => m.CmntQus, new { @for = "comment/question" })

                                @*<label for="comment/question">Comments/Questions*</label>*@
                                <div class="w-comment">
                                    @Html.TextAreaFor(m => m.CmntQus, new { placeholder = "Comments..", @id = "comment/question", @form = "usr-form" })
                                    @Html.ValidationMessageFor(m => m.CmntQus, "", new { @class = "text-danger" })

                                    @*<textarea id="comment/question" form="usr-form" placeholder="Comments.."></textarea>*@
                                </div>
                            </div>

                            <div class="col-lg-2 col-4 offset-4 col-md-3 offset-md-0 offset-sm-4 col-sm-4">
                                <div class="w-submit-btn">

                                    <button class="submit-btn text-center" form="usr-form" role="button">SUBMIT</button>

                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>

