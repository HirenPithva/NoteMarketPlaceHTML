    <style>

        .w-comment {
            height: 100%;
            width: 100%;
            display: block;
        }

        textarea {
            display: block;
            height: 80%;
            width: 100%;
            border-color: #d1d1d1;
            padding-left: 8px;
            padding-top: 2px;
            resize: none;
        }

            textarea:focus {
                outline: none !important;
                border: 1px solid #6255a5;
            }

        @@media (max-width: 767.97px) {
            .submit-btn {
                margin-top: 30px;
            }

            textarea {
                height: 150px;
            }

            .heading-of-basics p {
                text-align: center;
                font-size: 13px;
            }

            .heading-of-basics h2 {
                text-align: center;
            }

            .user-heading h1 {
                white-space: nowrap;
            }
        }
    </style>
</head>
